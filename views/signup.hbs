<div class="containerSign" id="signUpImg">
  <div><img class="logo" src="/images/logo.png"></div>
  <br><br>
  <h2 class="signUp">Sign up</h2>

  <br><br>
   

  <form id="form2" action="/signup" method="POST">
  
     <label class="fields">
      Username
       <br><br>
      <input class="input-bottom-line two" type="text" name="name" placeholder="Username" />
    </label>

<br><br>

    <label class="fields">
      Email
       <br><br>
      <input class="input-bottom-line two" type="text" name="email" placeholder="Email" />
    
    </label>

<br><br>

    <label class="fields">
      Password
       <br><br>
      <input class="input-bottom-line two" type="password" name="password" placeholder="********" />
    </label>

    <br><br><br><br>

    <button class="button-green btn" type="submit">Create account</button>

  </form>

  <form action="/categories" method="POST"></form>


  {{#if errorMessage}}
    <p>There was a problem: {{errorMessage}}</p>
  {{/if}}


</div>
