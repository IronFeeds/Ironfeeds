<div class="container" id="form">
  <h2 class="formAdd" >Add a New Article</h2>
  <form action="/profile/add" method="POST" enctype="multipart/form-data">

    <label class="fields" >
      Title
      <input class="input-bottom-line" type="text" name="title" placeholder="title"/>
    </label>

    <br><br>

    <label class="fields">
      URL
      <input class="input-bottom-line" type="url" name="url" placeholder="url"/>
    </label>

    <br><br>

    <label class="fields">
      Description
      <input class="input-bottom-line" type="text" name="description" placeholder="description"/>
    </label>

    <br><br>

    <label class="fields">Image:</label>
    
    <br><br>

        <input type="file" name="imageUrl"/>
    </label>

    <br><br><br>
    


    <label class="fields" for="categories">Choose a News Category</label>
      <select class="dropDown" name="categories">
        {{#each cat}}
  
        <option value="{{this._id}}">{{this.name}}</option>
       {{/each}}
      </select>
      </label>

      <br><br>
   
    <button class="button-green" type="submit">Add</button>

  </form>

  {{#if errorMessage}}
    <p>There was a problem: {{errorMessage}}</p>
  {{/if}}
</div>