<img src="{{user.image}}" alt=""> <span>{{user.name}}</span>
<nav>
    <h2>Saved</h2>
    <h2>My Article</h2>
</nav>
<div class>
    {{#each savedArticles}}
    <div>
        {{#if this.image}}
           <img src="{{this.image}}" alt="{{this.title}}">
        {{/if}}
        <h2>{{this.title}}</h2>
        <p>{{this.published_at}}</p>
        <p>{{this.description}}</p>
        <p><span>Source:{{this.source}}</span> <span>Category:{{this.category.name}}</span> <span>Country:{{this.country}}</span></p>
        <a href="{{this.url}}">Read the article</a>
        <a href="/profile/{{this._id}}/delete"><img src="images/bookmark.png" alt="save"></a>
    </div>
    {{/each}}
</div>

<div class="hidden">
    <a href="/profile/add">Add Article</a>

    {{#each userArticles}}
    <div>
        {{#if this.image}}
           <img src="{{this.image}}" alt="{{this.title}}">
        {{/if}}
        <h2>{{this.title}}</h2>
        <p>{{this.published_at}}</p>
        <p>{{this.description}}</p>
        <p><span>Source:{{this.source}}</span> <span>Category:{{this.category.name}}</span> <span>Country:{{this.country}}</span></p>
        <a href="{{this.url}}">Read the article</a>
        <a href="/profile/{{this._id}}/edit">Edit</a>
        <form action="/profile/{{this._id}}/delete" method="post">
        <button type="submit">Delete</button>
        </form>
    </div>
    {{/each}}
</div>


